{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",

    "setup:android": "node scripts/setup-android.js",
    "setup:ios": "echo 'iOS setup - No configuration needed'",
    "build:android": "npm run build && npx cap sync && npm run setup:android",
    "build:ios": "npm run build && npx cap sync",
    "open:android": "npx cap open android",
    "open:ios": "npx cap open ios",
    "deploy:android": "npm run build:android && npm run open:android",
    "deploy:ios": "npm run build:ios && npm run open:ios",
    "cap:sync": "npx cap sync",
    "cap:update": "npx cap update",
    "build:apk": "npm run setup:android && npm run build && npx cap sync && cd android && gradlew.bat assembleDebug"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@capacitor/android": "^6.2.0",
    "@capacitor/core": "^6.2.0",
    "@capacitor/ios": "^6.2.0",
    "@ionic/angular": "^8.7.7",
    "@ionic/angular-toolkit": "^12.3.0",
    "ionicons": "^7.4.0",
    "rxjs": "~7.8.0",
    "socket.io-client": "^4.8.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.7",
    "@angular/cli": "^20.3.7",
    "@angular/compiler-cli": "^20.3.0",
    "@capacitor/cli": "^6.2.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
